<p id="notice"><%= notice %></p>

<h1>Listing Submissions</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Submission</th>
      <th>Coverletter</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @submissions.each do |submission| %>
      <tr>
        <td><%= submission.name %></td>
        <td><%= submission.email %></td>
        <td><%= submission.submission %></td>
        <td><%= submission.coverletter %></td>
        <td><%= submission.time %></td>
        <td><%= link_to 'Show', submission %></td>
        <td><%= link_to 'Edit', edit_submission_path(submission) %></td>
        <td><%= link_to 'Destroy', submission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td class="yes"><i class="fa fa-check" aria-hidden="true"></i></td>
        <td class="no"><i class="fa fa-times" aria-hidden="true"></i></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Submission', new_submission_path %>
